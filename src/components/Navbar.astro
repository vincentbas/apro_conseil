---
// Library IMPORT
import { Icon } from "astro-icon/components";

// Components IMPORT
import Link from "./Link.astro";

// Data IMPORT
import { navbarData } from "../data/navbar";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logomark" aria-label="Go home">
      <Icon name="logomark" width="60" />
    </a>
    <ul>
      {
        navbarData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style="primary"
            isFilled={false}
            data-navLink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>